@page
@model IndexModel
@{
    ViewData["Title"] = "Todo WebApp";
}

<form method="post">
<div class="text-center">
    <div class="input-group-append">
        <a asp-page="./Edit" asp-route-id="0" class="btn btn-success">Add</a>
    </div>
    <table class="table table-striped table-bordered table-hover" style="max-width: 500px;">
    @foreach(var item in Model.List)
    {
        <tr>
            <td>
                <input type="checkbox" checked="@item.IsCompleted" />
                <a asp-page="./Edit" asp-route-id="@item.Id">@item.Title</a>
            </td>
            <td class="text-right">
                @item.CreatedAt.ToShortDateString()
            </td>
            <td class="text-center">
                <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</button>
            </td>
        </tr>
    }
    </table>
</div>
</form>