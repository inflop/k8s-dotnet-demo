@page
@model Kube.WebApp.Pages.EditModel
@{
    var check = Model.Item.IsCompleted;
    var isNew = Model.Item.Id <= 0;
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item!.Id" />
            <div class="form-group">
                <label asp-for="Item!.Title" class="control-label"></label>
                <input asp-for="Item!.Title" class="form-control" />
                <span asp-validation-for="Item!.Title" class="text-danger"></span>
            </div>
            @if (!isNew)
            {
                <div class="form-group">
                    <input type="checkbox" asp-for="Item!.IsCompleted" checked="@check" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}